<section>
  <h2>Add Student</h2>
  <% if (errors && errors.length) { %>
    <ul class="errors">
      <% errors.forEach((err) => { %><li><%= err %></li><% }) %>
    </ul>
  <% } %>
  <form action="/students" method="post">
    <label>First name <input name="firstName" value="<%= values.firstName || '' %>" required /></label>
    <label>Last name <input name="lastName" value="<%= values.lastName || '' %>" required /></label>
    <label>Email <input name="email" value="<%= values.email || '' %>" type="email" required /></label>
    <label>Course <input name="course" value="<%= values.course || '' %>" required /></label>
    <label>Marks <input name="marks" value="<%= values.marks || '' %>" type="number" min="0" max="100" required /></label>
    <button type="submit">Create</button>
  </form>
</section>
