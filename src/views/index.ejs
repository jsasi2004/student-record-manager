<section>
  <h2>Student List</h2>
  <% if (students.length === 0) { %>
    <p>No students yet.</p>
  <% } else { %>
    <table>
      <thead>
        <tr><th>Name</th><th>Email</th><th>Course</th><th>Marks</th><th>Actions</th></tr>
      </thead>
      <tbody>
        <% students.forEach((s) => { %>
          <tr>
            <td><%= s.firstName %> <%= s.lastName %></td>
            <td><%= s.email %></td>
            <td><%= s.course %></td>
            <td><%= s.marks %></td>
            <td>
              <a href="/students/<%= s._id %>/edit">Edit</a>
              <form action="/students/<%= s._id %>/delete" method="post" style="display:inline">
                <button type="submit" onclick="return confirm('Delete student?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</section>
